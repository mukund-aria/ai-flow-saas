# ============================================================================
# AI Flow SaaS Backend - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.

# ----------------------------------------------------------------------------
# Database (PostgreSQL)
# ----------------------------------------------------------------------------
# Local dev: docker compose -f docker-compose.dev.yml up -d
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aiflow

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# CORS origin for frontend (development only)
CORS_ORIGIN=http://localhost:5173

# ----------------------------------------------------------------------------
# Anthropic API
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_api_key_here

# ----------------------------------------------------------------------------
# Google OAuth (Required for production)
# ----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ----------------------------------------------------------------------------
# Session Security
# ----------------------------------------------------------------------------
SESSION_SECRET=change_this_to_a_random_string_in_production

# ----------------------------------------------------------------------------
# Redis Session Store (Optional - uses in-memory if not set)
# ----------------------------------------------------------------------------
# REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# ----------------------------------------------------------------------------
# Email Notifications (Resend)
# ----------------------------------------------------------------------------
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=AI Flow <noreply@yourdomain.com>

# ----------------------------------------------------------------------------
# Frontend URL (for magic links in emails)
# ----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:5173

# ----------------------------------------------------------------------------
# Access Control
# ----------------------------------------------------------------------------
# Comma-separated list of emails allowed to access the app.
# Leave empty to allow all authenticated users.
ALLOWED_EMAILS=
