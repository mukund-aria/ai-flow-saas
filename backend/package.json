  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp src/data/gallery-templates.json dist/data/",
    "start": "node dist/db/migrate.js && node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
